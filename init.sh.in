#!/rescue/sh

PATH="/rescue"

if [ "`ps -o command 1 | tail -n 1 | ( read c o; echo ${o} )`" = "-s" ]; then
	echo "==> Running in single-user mode"
	SINGLE_USER="true"
fi

echo "==> Remount rootfs as read-write"
mount -u -w /

makedir=${makedir:-"/cdrom /memdisk /sysroot"}

echo "==> Make mountpoints /cdrom /memdisk /usr"
mkdir -p ${makedir}

echo "Waiting for GhostBSD media to initialize"
while : ; do
    [ -e "/dev/iso9660/GHOSTBSD" ] && echo "found /dev/iso9660/GHOSTBSD" && sleep 2 && break
    sleep 2
done

echo "==> Mount cdrom"
mount_cd9660 /dev/iso9660/@VOLUME@ /cdrom

echo "==> Importing read only pool for cloning"
mdconfig -f /cdrom/data/system.uzip -u 1
zpool import ghostbsd -o readonly=on

if [ "$SINGLE_USER" = "true" ]; then
        echo "Starting interactive shell in temporary rootfs ..."
        exit 0
fi

# Ensure the system has more than enough memory for memdisk
x=3163787264
y=$(chroot /usr/local/ghostbsd-build/release /sbin/sysctl hw.physmem | chroot /usr/local/ghostbsd-build/release /usr/bin/awk '{print $2}')
echo "Required memory ${x} for memdisk"
echo "Detected memory ${y} for memdisk"
if [ $x -gt $y ] ; then
  echo "GhostBSD requires 4GB of memory for memdisk, and operation!"
  echo "Type exit, and press enter after entering the rescue shell to power off."
  exit 1
fi

echo "==> Mount swap-based memdisk"
mdconfig -a -t swap -s 4g
zpool create livecd /dev/md2
zfs set compression=gzip livecd
zfs send ghostbsd | chroot /usr/local/ghostbsd-build/release pv | zfs recv -F livecd

kenv init_shell="/rescue/sh"
exit 0
